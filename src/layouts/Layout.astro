---
import { SEO } from "astro-seo";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";

export interface Props {
  title: string;
}

const resolvedImageWithDomain = new URL("/justice.avif", Astro.site).toString();

const { title } = Astro.props;

const makeTitle = title ? title + " | " + "John M. Lozano Law Firm" : "404";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" sizes="any" href="/favicon.svg" />
    <meta name="
      generator" content={Astro.generator} />

    <script
      defer
      src="https://cdn.jsdelivr.net/npm/@alpinejs/intersect@3.x.x/dist/cdn.min.js"
    ></script>

    <!-- Alpine Core -->
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>

    <meta
      name="google-site-verification"
      content="wOF53EtkDx7-WAZ11oiwgjfvMrBr6lVPMgesiZ1_oUU"
    />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Website made for lawyer."
      twitter={{
        creator: "rodrigomezz",
        site: "law",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          type: "website",
          title: `John M. Lozano Law Firm`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Homepage Screenshot",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
